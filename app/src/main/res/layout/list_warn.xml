<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/list_item_container1">
    <RelativeLayout
        style="@style/list_item_container2">

        <RelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp60"
            style="@style/list_item_margin_lr">
            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delet"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/dp3"
                android:padding="@dimen/dp10"
                android:background="@drawable/ic_bg_click_select"
                />
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09/01 15:33:20"
                android:singleLine="true"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/dp1"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_below="@id/tv_time">
                <TextView
                    android:id="@+id/tv_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A562205"
                    android:layout_centerVertical="true"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:singleLine="true"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(105-冷藏箱)"
                    android:layout_centerVertical="true"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:textStyle="italic"
                    android:layout_marginLeft="@dimen/dp3"
                    android:layout_toEndOf="@id/tv_code"
                    />
            </RelativeLayout>
        </RelativeLayout>
        <View
            android:id="@+id/segment_line"
            android:layout_below="@id/rl_title"
            style="@style/segment_line" />
        <RelativeLayout
            android:id="@+id/rl_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp35"
            android:layout_below="@id/segment_line"
            style="@style/list_item_margin_lr">
            <TextView
                android:id="@+id/tv_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="温度超高( 7.8 )"
                android:textStyle="bold"
                android:textSize="21sp"
                android:textColor="#f44335"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/tv_range"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正常范围:2.5 - 7.5"
                android:textStyle="italic"
                android:textColor="#333333"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <View
            style="@style/segment_line"
            android:layout_below="@id/rl_content" />
    </RelativeLayout>
</FrameLayout>